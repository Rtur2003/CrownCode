# DevForge Suite Environment Configuration

# ===========================================
# PLATFORM CONFIGURATION
# ===========================================

# Platform Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# Platform URLs
NEXT_PUBLIC_PLATFORM_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/devforge_db
DATABASE_URL_DIRECT=postgresql://username:password@localhost:5432/devforge_db

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Session Configuration
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# Encryption Keys
ENCRYPTION_KEY=your_encryption_key_32_chars_long
HASH_SALT_ROUNDS=12

# ===========================================
# PROJECT-SPECIFIC CONFIGURATION
# ===========================================

# AI Music Detection Project
NEXT_PUBLIC_AI_MUSIC_API=http://localhost:3002
AI_MODEL_PATH=/models/wav2vec2
TENSORFLOW_MODEL_URL=https://your-model-cdn.com/model.json

# Data Manipulation Project
NEXT_PUBLIC_DATA_API=http://localhost:3003
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=csv,json,xlsx,xml

# ML Toolkit Project
NEXT_PUBLIC_ML_API=http://localhost:3004
PYTHON_SERVICE_URL=http://localhost:8000

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@devforge-suite.com

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=devforge-storage

# CloudFlare (CDN & Security)
CLOUDFLARE_API_TOKEN=your_cloudflare_token
CLOUDFLARE_ZONE_ID=your_zone_id

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=devforge-suite

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Vercel Deployment
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Netlify Deployment
NETLIFY_AUTH_TOKEN=your_netlify_token
NETLIFY_SITE_ID=your_netlify_site_id

# GitHub Actions
GITHUB_TOKEN=your_github_token

# ===========================================
# API RATE LIMITING
# ===========================================

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PREMIUM_MAX=1000

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/Disable Features
FEATURE_AI_MUSIC_DETECTION=true
FEATURE_DATA_MANIPULATION=false
FEATURE_ML_TOOLKIT=false
FEATURE_USER_REGISTRATION=true
FEATURE_PREMIUM_FEATURES=false

# Beta Features
BETA_REAL_TIME_PROCESSING=false
BETA_COLLABORATIVE_FEATURES=false

# ===========================================
# PERFORMANCE & OPTIMIZATION
# ===========================================

# Caching Configuration
CACHE_TTL=3600
STATIC_CACHE_TTL=86400
API_CACHE_TTL=300

# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAINS=devforge-suite.com,hasanarthuraltuntas.xyz
IMAGE_QUALITY=85
IMAGE_FORMATS=webp,jpg,png

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=true
LOG_LEVEL=info

# Development URLs
DEV_PLATFORM_PORT=3000
DEV_API_PORT=3001
DEV_AI_MUSIC_PORT=3002
DEV_DATA_PORT=3003
DEV_ML_PORT=3004

# Hot Reload
FAST_REFRESH=true
TURBOPACK=false

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================

# Production URLs (override in production)
# NEXT_PUBLIC_PLATFORM_URL=https://devforge-suite.com
# NEXT_PUBLIC_API_URL=https://api.devforge-suite.com

# Production Database (override in production)
# DATABASE_URL=postgresql://prod_user:prod_pass@prod_host:5432/prod_db

# Production Security (override in production)
# JWT_SECRET=production_jwt_secret_very_long_and_secure
# SESSION_SECRET=production_session_secret_very_long_and_secure