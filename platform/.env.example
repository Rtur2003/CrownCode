# =========================================================================
# CROWNCODE PLATFORM - ENVIRONMENT VARIABLES
# =========================================================================
# Copy this file to .env.local for local development
# Never commit .env.local to git - it contains sensitive data
# =========================================================================

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=CrownCode
NEXT_PUBLIC_APP_URL=https://crowncode.dev
NEXT_PUBLIC_APP_VERSION=1.0.0

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_TIMEOUT=30000

# AI Model Configuration
AI_MODEL_PATH=/models/wav2vec2
AI_MODEL_VERSION=v1.0.0
AI_MODEL_INFERENCE_TIMEOUT=10000

# Database (when backend is implemented)
DATABASE_URL=postgresql://user:password@localhost:5432/crowncode
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Authentication (when implemented)
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-this

# File Upload
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_FORMATS=mp3,wav,flac,m4a
UPLOAD_DIR=/tmp/uploads

# External APIs
GITHUB_TOKEN=your-github-token
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_VERCEL_ANALYTICS=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Email (for notifications - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=CrownCode <noreply@crowncode.dev>

# Feature Flags
FEATURE_AI_ANALYSIS=true
FEATURE_STREAMING_PLATFORMS=true
FEATURE_BATCH_PROCESSING=false
FEATURE_WEBSOCKET=false

# Development
NEXT_TELEMETRY_DISABLED=1
SKIP_TYPE_CHECK=false
ANALYZE_BUNDLE=false
